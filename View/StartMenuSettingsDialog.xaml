<ContentDialog x:Class="AppGroup.View.StartMenuSettingsDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               CornerRadius="8"
               MinWidth="450"
              >

    <ContentDialog.Resources>
        <Thickness x:Key="ContentDialogPadding">0,0,0,0</Thickness>

        <Style x:Key="SettingsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>
    </ContentDialog.Resources>

    <StackPanel Spacing="10" VerticalAlignment="Center" Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondaryBrush}" CornerRadius="5" HorizontalAlignment="Stretch">
        <Grid Padding="10,0,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Uid="StartMenuSettingsTitle" FontSize="20" Margin="10" VerticalAlignment="Center" FontWeight="SemiBold"/>
            <Button Click="CloseDialog" Grid.Column="1" Height="35" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0">
                <FontIcon Glyph="&#xe711;" FontSize="15"/>
            </Button>
        </Grid>

        <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="0" Margin="20,0,20,20">
                
                <TextBlock x:Uid="TrayIconSection" Style="{StaticResource SectionHeaderStyle}"/>
                
                <Border Style="{StaticResource SettingsCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="200"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                            <TextBlock x:Uid="ShowFolderListOnClick" FontWeight="SemiBold" FontSize="14" TextWrapping="Wrap"/>
                            <TextBlock x:Uid="ShowFolderListOnClickDescription" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,2,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="ShowStartMenuPopupToggle" Grid.Column="1" IsOn="True" OnContent="" OffContent="" VerticalAlignment="Center" Toggled="ShowStartMenuPopupToggle_Toggled" />
                    </Grid>
                </Border>

                <TextBlock x:Uid="FolderDisplaySection" Style="{StaticResource SectionHeaderStyle}"/>

                <Border Style="{StaticResource SettingsCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="200"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                            <TextBlock x:Uid="ColumnCount" FontWeight="SemiBold" FontSize="14" TextWrapping="Wrap"/>
                            <TextBlock x:Uid="ColumnCountDescription" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,2,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                        <ComboBox x:Name="FolderColumnCountComboBox" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" SelectionChanged="FolderColumnCountComboBox_SelectionChanged">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                    </Grid>
                </Border>

                
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</ContentDialog>
