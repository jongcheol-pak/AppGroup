<winex:WindowEx xmlns:winex="using:WinUIEx" Width="530" Height="650"
    x:Class="AppGroup.View.EditGroupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppGroup.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Edit Group">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <ContentDialog x:Name="EditItemDialog">
            <ContentDialog.Resources>
                <Thickness x:Key="ContentDialogPadding">0,0,0,-5</Thickness>
            </ContentDialog.Resources>
            <StackPanel Spacing="10" VerticalAlignment="Center" Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondaryBrush}" CornerRadius="5" HorizontalAlignment="Stretch">
                <Grid Padding="10,0,5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto" MinWidth="250"/>

                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="EditTitle" FontSize="20" Margin="10" VerticalAlignment="Center" FontWeight="SemiBold"></TextBlock>
                    <Button Click="CloseEditDialog" Grid.Column="1" Height="35" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0">
                        <FontIcon Glyph="&#xe711;" FontSize="15"/>
                    </Button>
                </Grid>
                <StackPanel Spacing="0" Padding="15,0,15,15">
                    <StackPanel Spacing="3">
                        <StackPanel CornerRadius="5" Padding="10" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Spacing="5">
                                    <Button x:Name="BrowseItemIconButton" Padding="5" Click="BrowseItemIcon_Click">
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <Image x:Name="ItemIconPreview" Width="50" Height="50" Stretch="UniformToFill"/>
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="ResetItemIconButton" x:Uid="ResetButton" Click="ResetItemIcon_Click" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <StackPanel CornerRadius="5" Padding="5" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                                        <TextBlock x:Uid="TitleLabel" Margin="5,0,0,0" Opacity="0.8" FontSize="12"/>
                                        <TextBox x:Name="TooltipTextBox" x:Uid="TitleTextBox" FontWeight="SemiBold" BorderBrush="Transparent" Background="Transparent"/>
                                    </StackPanel>
                                    <StackPanel CornerRadius="5" Padding="5" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                                        <TextBlock x:Uid="ArgumentsLabel" Margin="5,0,0,0" Opacity="0.8" FontSize="12"/>
                                        <TextBox x:Name="ArgsTextBox" x:Uid="ArgumentsTextBox" FontWeight="SemiBold" BorderBrush="Transparent" Background="Transparent"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                    <Grid Margin="0,10,0,0">
                        <Button x:Uid="SaveButton" HorizontalAlignment="Right" Click="EditItemSave_Click" Style="{StaticResource AccentButtonStyle}"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ContentDialog>

        <ContentDialog x:Name="CustomDialog">
            <ContentDialog.Resources>
                <Thickness x:Key="ContentDialogPadding">0,0,0,0</Thickness>
            </ContentDialog.Resources>
            <StackPanel Spacing="10" VerticalAlignment="Center" Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondaryBrush}" CornerRadius="5" HorizontalAlignment="Stretch">
                <Grid Padding="10,0,5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto" MinWidth="250"/>

                    </Grid.ColumnDefinitions>
                    <TextBlock FontSize="20" Margin="10" VerticalAlignment="Center" FontWeight="SemiBold">아이콘 선택</TextBlock>
                    <Button Click="CloseDialog" Grid.Column="1" Height="35" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0">
                        <FontIcon Glyph="&#xe711;" FontSize="15"/>
                    </Button>
                </Grid>
                <StackPanel x:Name="DialogContentPanel" Spacing="0" Padding="15,0,15,15">
                    <StackPanel x:Name="IconSelectionOptionsPanel" Spacing="0">
                    <Button BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" FontSize="12" Padding="5" Click="RegularClick" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                        <StackPanel Spacing="20" Padding="10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xe91b;" FontSize="25"/>
                            <StackPanel>
                                <TextBlock x:Uid="RegularIconTitle" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock x:Uid="RegularIconDesc" FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>
                    <Button BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" FontSize="12" Padding="5" Click="GridClick" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                        <StackPanel Spacing="20" Padding="10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xf0e2;" FontSize="25"/>
                            <StackPanel>
                                <TextBlock x:Uid="GridIconTitle" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock x:Uid="GridIconDesc" FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>
                    <Button BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" FontSize="12" Padding="5" Click="ResourceClick" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                        <StackPanel Spacing="20" Padding="10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE8B9;" FontSize="25"/>
                            <StackPanel>
                                <TextBlock x:Uid="ResourceIconTitle" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock x:Uid="ResourceIconDesc" FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>
                    </StackPanel>
                    <GridView x:Name="ResourceIconGridView" Visibility="Collapsed" SelectionMode="Single" SelectionChanged="ResourceIcon_SelectionChanged" Height="300" Width="450">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Padding="10">
                                    <Image Source="{Binding}" Width="50" Height="50" Stretch="Uniform"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </StackPanel>
            </StackPanel>
        </ContentDialog>

        <ContentDialog x:Name="CustomizeDialog" >
            <ContentDialog.Resources>
                <Thickness x:Key="ContentDialogPadding">0,0,0,0</Thickness>

            </ContentDialog.Resources>
            <StackPanel Spacing="10" VerticalAlignment="Center" Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondaryBrush}" CornerRadius="5" HorizontalAlignment="Stretch">
                <Grid Padding="10,0,5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto" MinWidth="250"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Uid="CustomizeTitle" FontSize="20" Margin="10" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <Button Click="CloseCustomizeDialog" Grid.Column="1" Height="35" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0">
                        <FontIcon Glyph="&#xe711;" FontSize="15"/>
                    </Button>
                </Grid>

                <StackPanel Spacing="0" Padding="15,0,15,15">

                    <StackPanel Orientation="Vertical" Grid.Column="1" Margin="0,0,0,2" VerticalAlignment="Center" Padding="10,15,15,15" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" CornerRadius="5">
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Uid="ColumnLabel" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            <ComboBox x:Name="GroupColComboBox" Grid.Column="1" SelectionChanged="GroupColComboBox_SelectionChanged"/>
                        </Grid>
                    </StackPanel>

                    <Expander
                        x:Name="ExpanderHeader"
                        HorizontalAlignment="Stretch"
                        IsExpanded="False"
                        ExpandDirection="Down"
                        Background="Transparent"
                        VerticalAlignment="Top"
                        Padding="0"
                        Margin="0,0,0,2"
                        HorizontalContentAlignment="Stretch"
                        CornerRadius="5"
                        BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                        <Expander.Header>
                            <StackPanel Orientation="Vertical" Margin="-10,0,-15,0" VerticalAlignment="Center" Padding="15,10,0,10">
                                <Grid HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock x:Uid="HeaderLabel" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="HeaderDesc" VerticalAlignment="Center" FontSize="12" Opacity="0.7"/>
                                    </StackPanel>
                                    <ToggleSwitch Grid.Column="1" x:Name="GroupHeader" OnContent="" OffContent="" IsOn="{Binding GroupHeaderIsOn, Mode=TwoWay}" Toggled="GroupHeader_Toggled"/>
                                </Grid>
                            </StackPanel>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel>
                                <StackPanel x:Name="HeaderTextPanel" Orientation="Vertical" HorizontalAlignment="Stretch" Padding="40,10,50,10" Background="{ThemeResource CardBackgroundFillColorSecondary}" BorderThickness="0" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" CornerRadius="0,0,5,5">
                                    <Grid HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Margin="0,0,0,0">
                                            <TextBlock x:Uid="EditLabel" VerticalAlignment="Center"/>
                                            <TextBlock x:Uid="EditDesc" VerticalAlignment="Center" FontSize="12" Opacity="0.7"/>
                                        </StackPanel>
                                        <ToggleSwitch Grid.Column="1" x:Name="ShowGroupName" OnContent="" OffContent="" IsOn="{Binding ShowGroupEditIsOn, Mode=TwoWay}" IsEnabled="False"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>

                    

                    <Expander
           x:Name="ExpanderLabel"
           Grid.Row="1"
           HorizontalAlignment="Stretch"
           IsExpanded="False"
           ExpandDirection="Down"
           Background="Transparent"
           VerticalAlignment="Top"
           Padding="0"
             HorizontalContentAlignment="Stretch"
           CornerRadius="5"
           BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        >
                        <Expander.Header>

                            <StackPanel Orientation="Vertical"  Margin="-10,0,-15,0" VerticalAlignment="Center" Padding="15,10,0,10">
                                <Grid HorizontalAlignment="Stretch" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock x:Uid="LabelLabel" VerticalAlignment="Center"/>
                                        <TextBlock x:Uid="LabelDesc" VerticalAlignment="Center" FontSize="12" Opacity="0.7"/>
                                    </StackPanel>
                                    <ToggleSwitch Grid.Column="1" x:Name="ShowLabels" OnContent="" OffContent="" IsOn="{Binding ShowLabelsIsOn, Mode=TwoWay}" Toggled="ShowLabels_Toggled"/>

                                </Grid>
                            </StackPanel>
                        </Expander.Header>
                        <Expander.Content >
                            <StackPanel>
                                <StackPanel  x:Name="LabelSizePanel"   Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Stretch"    Padding="40,10,50,10" Background="{ThemeResource CardBackgroundFillColorSecondary}" BorderThickness="0" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"  CornerRadius="0" >
                                    <Grid HorizontalAlignment="Stretch"
                       >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Uid="FontSizeLabel" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                        <ComboBox x:Name="LabelSizeComboBox" Grid.Column="1" IsEnabled="False"/>
                                    </Grid>

                                </StackPanel>
                                <StackPanel  x:Name="LabelPositionPanel"   Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Stretch" Padding="40,10,50,10" Background="{ThemeResource CardBackgroundFillColorSecondary}" BorderThickness="0,1,0,0"  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" CornerRadius="0,0,5,5" >
                                    <Grid HorizontalAlignment="Stretch"
>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Uid="PositionLabel" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                        <ComboBox  Grid.Column="1" IsEnabled="False" x:Name="LabelPositionComboBox"/>
                                    </Grid>

                                </StackPanel>
                            </StackPanel>
                        </Expander.Content>

                    </Expander>

                </StackPanel>
            </StackPanel>
        </ContentDialog>

        <ContentDialog x:Name="AllAppsDialog">
            <ContentDialog.Resources>
                <Thickness x:Key="ContentDialogPadding">0,0,0,0</Thickness>
            </ContentDialog.Resources>
            <StackPanel Spacing="10" VerticalAlignment="Center" Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondaryBrush}" CornerRadius="5" HorizontalAlignment="Stretch" Width="400">
                <Grid Padding="10,0,5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Uid="InstalledAppsTitle" FontSize="20" Margin="10" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <Button Click="CloseAllAppsDialog" Grid.Column="1" Height="35" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0">
                        <FontIcon Glyph="&#xe711;" FontSize="15"/>
                    </Button>
                </Grid>
                <StackPanel Spacing="0" Padding="15,0,15,15">
                    <Grid Margin="0,0,0,10">
                        <TextBox x:Name="AppSearchTextBox" x:Uid="SearchAppsTextBox" TextChanged="AppSearchTextBox_TextChanged"/>
                    </Grid>
                    <Grid Background="{ThemeResource CardBackgroundFillColorDefault}" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" CornerRadius="5" Height="300">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="2">
                            <ListView x:Name="AllAppsListView" SelectionMode="None" Background="Transparent" ItemsSource="{Binding InstalledApps}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalAlignment="Center" MinWidth="20"/>
                                            <Image Grid.Column="1" Source="{Binding Icon}" Width="24" Height="24" Margin="8,0,8,0" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding DisplayName}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                        <ProgressRing x:Name="AppsLoadingRing" IsActive="False" Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock x:Name="SelectedAppsCount" Text="{Binding SelectedAppsCountText}" VerticalAlignment="Center" Opacity="0.7"/>
                        </StackPanel>
                        <Button x:Name="AddSelectedAppsButton" x:Uid="AddSelectedButton" HorizontalAlignment="Right" Click="AddSelectedApps_Click" Style="{StaticResource AccentButtonStyle}"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ContentDialog>

        <ContentDialog x:Name="FolderWebDialog">
            <ContentDialog.Resources>
                <Thickness x:Key="ContentDialogPadding">0,0,0,0</Thickness>
            </ContentDialog.Resources>
            <StackPanel Spacing="10" VerticalAlignment="Center" Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondaryBrush}" CornerRadius="5" HorizontalAlignment="Stretch" Width="400">
                <Grid Padding="10,0,5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Uid="FolderWebTitle" FontSize="20" Margin="10" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <Button Click="CloseFolderWebDialog" Grid.Column="1" Height="35" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0">
                        <FontIcon Glyph="&#xe711;" FontSize="15"/>
                    </Button>
                </Grid>
                <StackPanel Spacing="0" Padding="15,0,15,15">
                    <StackPanel Spacing="3">
                        <StackPanel CornerRadius="5" Padding="10" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Spacing="5">
                                    <Button x:Name="BrowseFolderWebIconButton" Padding="5" Click="BrowseFolderWebIcon_Click">
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <Image x:Name="FolderWebIconPreview" Width="50" Height="50" Stretch="Uniform"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Spacing="5">
                                    <StackPanel CornerRadius="5" Padding="5" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                                        <TextBlock x:Uid="TypeLabel" Margin="5,0,0,0" Opacity="0.8" FontSize="12"/>
                                        <ComboBox x:Name="FolderWebTypeComboBox" HorizontalAlignment="Stretch" SelectionChanged="FolderWebTypeComboBox_SelectionChanged">
                                            <ComboBoxItem x:Uid="FolderType" Tag="Folder"/>
                                            <ComboBoxItem x:Uid="WebType" Tag="Web"/>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel CornerRadius="5" Padding="5" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                                        <TextBlock x:Uid="NameLabel" Margin="5,0,0,0" Opacity="0.8" FontSize="12"/>
                                        <TextBox x:Name="FolderWebNameTextBox" x:Uid="NameTextBox" FontWeight="SemiBold" BorderBrush="Transparent" Background="Transparent"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        <StackPanel x:Name="FolderPathPanel" CornerRadius="5" Padding="10" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Visibility="Collapsed">
                            <TextBlock x:Uid="FolderPathLabel" Margin="5,0,0,5" Opacity="0.8" FontSize="12"/>
                            <Grid ColumnSpacing="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="FolderPathTextBox" x:Uid="FolderPathTextBox" FontWeight="SemiBold" BorderBrush="Transparent" Background="Transparent" IsReadOnly="True"/>
                                <Button Grid.Column="1" x:Uid="FolderSelectButton" Click="BrowseFolderPath_Click">
                                    <FontIcon Glyph="&#xED25;" FontSize="15"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                        <StackPanel x:Name="WebUrlPanel" CornerRadius="5" Padding="10" Background="{ThemeResource CardBackgroundFillColorDefault}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Visibility="Collapsed">
                            <TextBlock x:Uid="WebUrlLabel" Margin="5,0,0,5" Opacity="0.8" FontSize="12"/>
                            <TextBox x:Name="WebUrlTextBox" x:Uid="WebUrlTextBox" FontWeight="SemiBold" BorderBrush="Transparent" Background="Transparent"/>
                        </StackPanel>
                    </StackPanel>
                    <Grid Margin="0,10,0,0">
                        <Button x:Uid="AddButton" HorizontalAlignment="Right" Click="FolderWebSave_Click" Style="{StaticResource AccentButtonStyle}"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ContentDialog>

        <ContentDialog x:Name="FolderWebIconDialog">
            <ContentDialog.Resources>
                <Thickness x:Key="ContentDialogPadding">0,0,0,0</Thickness>
            </ContentDialog.Resources>
            <StackPanel Spacing="10" VerticalAlignment="Center" Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondaryBrush}" CornerRadius="5" HorizontalAlignment="Stretch">
                <Grid Padding="10,0,5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto" MinWidth="250"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock FontSize="20" Margin="10" VerticalAlignment="Center" FontWeight="SemiBold">아이콘 선택</TextBlock>
                    <Button Click="CloseFolderWebIconDialog" Grid.Column="1" Height="35" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0">
                        <FontIcon Glyph="&#xe711;" FontSize="15"/>
                    </Button>
                </Grid>
                <StackPanel x:Name="FolderWebIconDialogContentPanel" Spacing="0" Padding="15,0,15,15">
                    <StackPanel x:Name="FolderWebIconSelectionOptionsPanel" Spacing="0">
                        <Button BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" FontSize="12" Padding="5" Click="FolderWebRegularIconClick" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <StackPanel Spacing="20" Padding="10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xe91b;" FontSize="25"/>
                                <StackPanel>
                                    <TextBlock FontSize="16" FontWeight="SemiBold">일반 아이콘</TextBlock>
                                    <TextBlock FontSize="13">디렉터리에서 아이콘 선택</TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                        <Button BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" FontSize="12" Padding="5" Click="FolderWebResourceIconClick" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <StackPanel Spacing="20" Padding="10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE8B9;" FontSize="25"/>
                                <StackPanel>
                                    <TextBlock FontSize="16" FontWeight="SemiBold">리소스 아이콘</TextBlock>
                                    <TextBlock FontSize="13">앱 리소스에서 아이콘 선택</TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <GridView x:Name="FolderWebResourceIconGridView" Visibility="Collapsed" SelectionMode="Single" SelectionChanged="FolderWebResourceIcon_SelectionChanged" Height="300" Width="450">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Padding="10">
                                    <Image Source="{Binding}" Width="50" Height="50" Stretch="Uniform"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </StackPanel>
            </StackPanel>
        </ContentDialog>

        <Grid Padding="20,50,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel>
                <Grid ColumnSpacing="10" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBox FontWeight="SemiBold" x:Name="GroupNameTextBox" x:Uid="GroupNameTextBox" FontSize="25" Height="45" Text="{Binding GroupName, Mode=TwoWay}" TextChanged="GroupNameTextBox_TextChanged" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" TextWrapping="Wrap">
                            <TextBox.Resources>
                                <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent"/>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock x:Uid="GroupNameLabel" Grid.Column="1" Padding="10,0,0,0" FontSize="12" Opacity=".8" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Padding="5" VerticalAlignment="Center" CornerRadius="5" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" Background="{ThemeResource CardBackgroundFillColorDefault}" Orientation="Horizontal">
                        <ComboBox x:Name="IconGridComboBox" VerticalAlignment="Center" Background="Transparent" BorderThickness="0" Visibility="Collapsed" SelectionChanged="IconGridComboBox_SelectionChanged" Margin="0,0,0,0" Grid.Column="0"/>
                        <Button x:Name="BrowseIconButton" Background="Transparent" BorderThickness="0" FontSize="12" Padding="5" Click="BrowseIconButton_Click">
                            <Border x:Name="IconPreviewBorder" CornerRadius="3">
                                <StackPanel Orientation="Horizontal">
                                    <Image x:Name="IconPreviewImage" Stretch="Uniform" Width="50" Height="50" Source="ms-appx:///default_preview.png" />
                                </StackPanel>
                            </Border>
                        </Button>
                    </StackPanel>
                </Grid>
                <InfoBar x:Uid="RenameWarning" Margin="10,0,10,0" IsOpen="False" Severity="Warning" x:Name="RenameInfoBar"/>
            </StackPanel>

            <Grid Grid.Row="1" Padding="10,10,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Spacing="0"  CornerRadius="5" Padding="0,0,0,0" Orientation="Vertical" VerticalAlignment="Center">

                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                    <Grid ColumnSpacing="2" Margin="0,0,0,2" CornerRadius="5" VerticalAlignment="Center">
